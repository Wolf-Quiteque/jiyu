{{> ../../../views/templates/head }}

<body>
    {{> ../../../views/templates/gnb }}


    <!-- Start of App Container -->
    <div class="app-container">

        {{> ../../../views/templates/lnb }}


        <!-- Start of Main Container-->
        <main>
            <section class="content-wrapper backoffice game-registration">
                <div class="wrapper-title">
                    <h2>게임 신규 등록</h2>

                    <nav class="ml-auto" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">백오피스</a></li>
                            <li class="breadcrumb-item active" aria-current="page">계정관리</li>
                        </ol>
                    </nav>
                </div>

                <div class="wrapper-body">
                    <div class="wrapper-body-header">
                        <span class="title">기본 정보</span>
                    </div>


                    <div class="form-tb">
                        <table>
                            <colgroup>
                                <col width="20%" />
                                <col width="50%" />
                                <col width="30%" />
                            </colgroup>
                            <tbody>

                                <tr>
                                    <td class="label"><label for="">입점사</label></td>
                                    <td>
                                        <select class="dropdown-select show-tick line-40">
                                            <option selected disabled>입점사 선택</option>
                                            <option>목록</option>
                                            <option>목록</option>
                                            <option>목록</option>
                                        </select>
                                    </td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td class="label"><label for="">게임 ID</label></td>
                                    <td class="horiz">
                                        <div class="row-wrapper">
                                            <div class="input-container wdtper-72" data-target="#input-basic">
                                                <input class="input-field" id="input-basic" type="text"
                                                    placeholder="ID 생성 버튼을 누르세요.">
                                            </div>
                                            <button type="button" class="btn solid-40 wdtper-25">ID 생성</button>
                                        </div>

                                    </td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td class="label"><label for="">게임 이름</label></td>
                                    <td class="horiz">
                                        <div class="input-container" data-target="#input-basic">
                                            <input class="input-field" id="input-basic" type="text"
                                                placeholder="게임 이름 입력 (영문)">
                                        </div>
                                    </td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td class="label"><label for="">카테고리</label></td>
                                    <td>
                                        <select class="dropdown-select show-tick line-40">
                                            <option selected disabled>게임 카테고리 선택</option>
                                            <option>목록</option>
                                            <option>목록</option>
                                            <option>목록</option>
                                        </select>
                                    </td>
                                    <td></td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="btns">
                    <div></div>
                    <div>
                        <button type="button" class="btn confirm-line-46">취소</button>
                        <button type="button" class="btn confirm-solid-46">저장</button>
                    </div>

                </div>
            </section>

        </main>
        <!-- End of Main Container-->

    </div>
    <!-- End of App Container -->

    {{> ../../../views/templates/global-scripts }}

</body>

</html>