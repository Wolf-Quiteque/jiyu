{{> ../../../views/templates/head }}

<body>
    {{> ../../../views/templates/gnb }}


    <!-- Start of App Container -->
    <div class="app-container">

        {{> ../../../views/templates/lnb }}


        <!-- Start of Main Container-->
        <main>
            <section class="content-wrapper backoffice category-editing">
                <div class="wrapper-title">
                    <h2>카테고리 신규 등록</h2>

                    <nav class="ml-auto" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">백오피스</a></li>
                            <li class="breadcrumb-item active" aria-current="page">카테고리관리</li>
                        </ol>
                    </nav>
                </div>

                <div class="wrapper-body">
                    <div class="wrapper-body-header">
                        <span class="title">기본 정보</span>
                    </div>


                    <div class="form-tb">
                        <table>
                            <colgroup>
                                <col width="20%" />
                                <col width="50%" />
                                <col width="30%" />
                            </colgroup>
                            <tbody>
                                <tr>
                                    <td class="label"><label for="">카테고리 ID</label></td>
                                    <td class="horiz">
                                        <div class="input-container" data-target="#input-basic">
                                            <input class="input-field" id="input-basic" type="text"
                                                placeholder="ID 생성 버튼을 누르세요." disabled>
                                        </div>

                                    </td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td class="label"><label for="">카테고리 이름</label></td>
                                    <td>
                                        <div class="input-container" data-target="#input-basic">
                                            <input class="input-field" id="input-basic" type="text"
                                                placeholder="카테고리 이름 입력">
                                        </div>
                                    </td>
                                    <td></td>
                                </tr>

                            </tbody>
                        </table>
                    </div>

                    <div class="btns">
                        <button type="button" class="btn confirm-solid-red-46">카테고리 삭제</button>
                        <div>
                            <button type="button" class="btn confirm-line-46">취소</button>
                            <button type="button" class="btn confirm-solid-46">저장</button>
                        </div>
                    </div>
            </section>


            <div class="modal modal-medium with-component fade" tabindex="-1" role="dialog"
                id="category_editing_modal1">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h5 class="modal-title">카테고리 삭제</h5>
                            <button type="button" class="icons icon-popup-close close" data-dismiss="modal"
                                aria-label="close"></button>
                        </div>

                        <!-- Modal Body -->
                        <div class="modal-body">
                            <p>
                                다음 카테고리를 삭제하시겠습니까?
                            </p>

                            <div class="form-tb mt-4">
                                <table>
                                    <colgroup>
                                        <col width="30%" />
                                        <col width="50%" />
                                        <col width="20%" />
                                    </colgroup>
                                    <tbody>

                                        <tr>
                                            <td class="label"><label for="">카테고리 ID</label></td>
                                            <td>
                                                % 카테고리 ID %
                                            </td>
                                            <td></td>
                                        </tr>

                                        <tr>
                                            <td class="label"><label for="">카테고리 이름</label></td>
                                            <td>
                                                % 카테고리명 %
                                            </td>
                                            <td></td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>

                        </div>

                        <!-- Modal Footer -->
                        <div class="modal-footer">
                            <button type="button" class="btn popup-line-38">취소</button>
                            <button type="button" class="btn popup-solid-38">확인</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-triggers">
                <!-- This is sample button to show modals -->
                <button type="button" class="btn solid-40" data-toggle="modal"
                    data-target="#category_editing_modal1">Modal
                    1</button>
            </div>
        </main>
        <!-- End of Main Container-->

    </div>
    <!-- End of App Container -->

    {{> ../../../views/templates/global-scripts }}

</body>

</html>